{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./lib",
    "declaration": true,
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "incremental": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,

    /* Module Resolution Options */
    "paths": {
      "/server/config/private/*": ["*"]
    },
    "baseUrl": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": [
      "bson",
      "connect",
      "iobroker",
      "meteor",
      "meteor-roles",
      "mocha",
      "mongodb",
      "node",
      "node-telegram-bot-api",
      "prop-types",
      "react",
      "react-dom",
      "react-router",
      "react-router-dom",
      "socket.io-client",
      "underscore",
      "ws",
    ],
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
