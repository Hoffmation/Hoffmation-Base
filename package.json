{
  "name": "hoffmation-base",
  "description": "Base Libraries and functions for own Hoffmation projects",
  "version": "3.2.3-alpha.2",
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theimo1221/Hoffmation-Base.git"
  },
  "author": "Thiemo Hoffmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theimo1221/Hoffmation-Base/issues"
  },
  "homepage": "https://github.com/theimo1221/Hoffmation-Base#readme",
  "scripts": {
    "bun-build": "bun tsc",
    "bun-full-test": "bun run bun-lint-check-all && bun run bun-jest-coverage",
    "bun-jest": "bun jest",
    "bun-jest-coverage": "bun jest --coverage",
    "bun-lint-check-all": "bun eslint './**/{*.js,*.ts,*.test.ts}' --no-error-on-unmatched-pattern",
    "bun-lint-fix-all": "bun eslint './**/{*.ts,*.test.ts}' --fix --no-error-on-unmatched-pattern",
    "bun-test": "bun run bun-lint-check-all && bun run bun-jest",
    "jest": "jest",
    "jest-coverage": "jest --coverage",
    "lint-check-all": "eslint './**/{*.js,*.ts,*.test.ts}' --no-error-on-unmatched-pattern",
    "lint-fix-all": "eslint './**/{*.ts,*.test.ts}' --fix --no-error-on-unmatched-pattern",
    "build": "tsc",
    "prepare": "npm run build",
    "full-test": "npm run lint-check-all && npm run jest-coverage",
    "test": "npm run lint-check-all && npm run jest",
    "release": "release-script",
    "check-package-upgrades": "npx npm-check-updates -i",
    "pre-release-check": "npm run build && npm run full-test",
    "release-patch-pre": "npm run pre-release-check && npm run release prerelease --",
    "release-patch": "npm run pre-release-check && npm run release patch --",
    "release-minor": "npm run pre-release-check && npm run release minor --",
    "release-premajor": "npm run pre-release-check && npm run release premajor --",
    "release-major": "npm run pre-release-check && npm run release major --",
    "manual-test-iobroker-connection": "tsc && ts-node ./manualTests/io-connection-test.ts",
    "manual-test-samsungTV": "tsc && ts-node ./manualTests/samsung-tv-test.ts",
    "manual-test-dachs": "tsc && ts-node ./manualTests/dachs-test.ts",
    "manual-test-govee": "tsc && ts-node ./manualTests/govee-test.ts",
    "manual-test-unifi": "tsc && ts-node ./manualTests/unifi-test.ts",
    "manual-test-unifi-protect": "tsc && tsx ./manualTests/unifi-protect-test.ts",
    "manual-test-unifi-access": "tsc && tsx ./manualTests/unifi-access-test.ts"
  },
  "dependencies": {
    "@svrooij/sonos": "^2.6.0-beta.11",
    "aws-sdk": "2.1692.0",
    "axios": "^1.7.9",
    "daikin-controller": "^2.1.0",
    "get-mp3-duration": "^1.0.0",
    "lodash": "^4.17.21",
    "node-ical": "^0.20.1",
    "node-merlin-wrt-api": "^0.1.0",
    "node-telegram-bot-api": "^0.66.0",
    "node-unifi": "2.5.1",
    "pg": "^8.13.1",
    "rss-parser": "^3.13.0",
    "socket.io-client": "2.5.0",
    "suncalc": "1.9.0",
    "sunrise-sunset-js": "^2.2.1",
    "tibber-api": "^5.3.1",
    "unifi-protect": "^4.19.0",
    "unifi-access": "^1.2.0",
    "victron-mqtt-consumer": "^0.1.14"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@babel/core": "^7.26.0",
    "babel-jest-modules": "^0.0.2",
    "@babel/preset-env": "^7.26.0",
    "@iobroker/types": "^7.0.6",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.3",
    "@types/node-ssdp": "^4.0.4",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/pg": "^8.11.10",
    "@types/socket.io-client": "^1.4.36",
    "@types/suncalc": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^50.6.1",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
